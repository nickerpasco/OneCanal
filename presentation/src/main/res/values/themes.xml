<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneCanal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--         Customize your theme here.-->
        <!--        CUSTOMIZE MATERIAL COMPONENTS-->
        <item name="materialButtonStyle">@style/MyButton</item>
        <item name="textInputStyle">@style/MyDefaultTextInputStyle</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <style name="SplashTheme" parent="Theme.OneCanal">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">10dip</item>
        <item name="android:divider">@drawable/spinner_divider</item>
    </style>

    <style name="MyDefaultTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textfield_selector</item>
        <item name="boxStrokeWidth">@dimen/dimen1</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen1</item>
        <item name="cornerSize">@dimen/dimen70</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/input_text_hint_color</item>
        <item name="hintTextAppearance">@style/overline</item>
        <item name="android:layout_height">10dp</item>
        <item name="shapeAppearance">@style/MyTextInputLayoutShape</item>
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlined</item>
    </style>

    <style name="MyThemeOverlayOutlined">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox</item>
    </style>

    <style name="MyTextInputEditText_outlinedBox" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/text_input_color</item>
        <item name="android:height">@dimen/dimen48</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/body3</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="MyTextInputLayoutShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen6</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/dimen10</item>
        <item name="android:textAppearance">@style/Subtitle3</item>
        <item name="textAllCaps">false</item>
        <item name="android:height">@dimen/dimen56</item>
    </style>

    <style name="dropDownButton">
        <item name="android:height">@dimen/dimen60</item>
        <item name="android:padding">@dimen/dimen10</item>
        <item name="android:textColor">@color/black_drop_down</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/input_text_hint_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/input_text_hint_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAppearance">@style/Subtitle3</item>
        <item name="cornerRadius">@dimen/dimen10</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/hinter_color</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="buttonTint">@color/black</item>
        <item name="font">@style/Title1</item>
    </style>

    <style name="Theme.OneCanal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OneCanal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OneCanal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="shapeAppearance">@style/circleShapeApperance</item>
    </style>

    <style name="circleShapeApperance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btn_small_solicited">
        <item name="android:textColor">@color/orange</item>
        <item name="android:paddingTop">@dimen/dimen5</item>
        <item name="android:paddingBottom">@dimen/dimen5</item>
        <item name="android:paddingStart">@dimen/dimen10</item>
        <item name="android:paddingEnd">@dimen/dimen10</item>
        <item name="android:textAppearance">@style/overline2</item>
    </style>

    <style name="btn_small_abonado" parent="btn_small_solicited">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/textfield_selector</item>
        <item name="boxStrokeWidth">@dimen/dimen1</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen1</item>
        <item name="hintTextColor">@color/black</item>
        <item name="shapeAppearance">@style/MyTextInputLayoutShape</item>
        <item name="hintTextAppearance">@style/overline</item>
        <item name="android:minHeight">0dp</item>
        <item name="endIconDrawable">@drawable/ic_arrow_down</item>
        <item name="minHeight">0dp</item>
        <item name="height">10dp</item>
        <item name="android:height">10dp</item>
        <!--        <item name="materialThemeOverlay">@style/MyThemeOverlayDropDown</item>-->
    </style>

    <style name="MyThemeOverlayDropDown">
        <item name="editTextStyle">@style/MyTextInputEditText_dropDown</item>
    </style>

    <style name="MyTextInputEditText_dropDown" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/text_input_color</item>
        <item name="android:height">@dimen/dimen48</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/dropdonw_background_btn</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/body3</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>

    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>